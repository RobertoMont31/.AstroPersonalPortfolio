---
import { Icon } from "astro-icon";
const { iconUrl = "#",
ariaLabel = "This should be an social media button",
iconTitle = "Some lost Icon apparently",
iconSrc = "favicon",
iconTooltipText = "This didn't go as planed" } = Astro.props;
---

<div class="flex">
	<a
		href={iconUrl}
		rel="noopener"
		aria-label={ariaLabel}
		target="_blank"
		title={iconTitle}>
		<div
			class="group flex place-content-center w-12 h-10 sm:w-12 sm:h-10 xl:w-16 xl:h-14 p-1.5 transition duration-200 ease-in-out bg-violet-100 bg-opacity-20 border rounded-xl border-transparent hover:border-violet-100">
			<Icon class="text-violet-100" name={iconSrc} />

			<div
				class="hidden absolute self-center w-1.5 h-1.5 bg-violet-100 rounded-[1.5px] rotate-45 translate-y-[1.65rem] xl:w-3 xl:h-3 xl:translate-y-[2.40rem] xl:rounded-sm transition-all opacity-0 group-hover:flex group-hover:opacity-100 duration-500 ease-in-out">
			</div>
			<div
				class="hidden absolute self-center font-kodcha font-bold text-xs max-w-fit whitespace-nowrap bg-violet-100 p-[0.15rem] rounded-sm translate-y-[2.3rem] xl:text-sm xl:p-1.5 xl:rounded-md xl:translate-y-[3.40rem] group-hover:flex group-hover:opacity-100 transition-all duration-500">
				{iconTooltipText}
			</div>
		</div>
	</a>
</div>
