---
import { Icon } from "astro-icon";
const { iconParameters } = Astro.props;
---

<div class="max-w-fit absolute place-self-center">
	<a
		href={iconParameters.iconUrl}
		rel="noopener"
		aria-label={iconParameters.ariaLabel}
		target="_blank"
		title={iconParameters.iconTitle}>
		<div
			class="group w-12 h-10 sm:w-12 sm:h-10 lg:w-16 lg:h-14 p-2.5 m-1 transition-all duration-200 ease-in-out bg-violet-100 bg-opacity-20 border rounded-xl border-transparent hover:border-violet-100">
			<Icon
				class="w-6.5 lg:w-11 text-orange-500"
				name={iconParameters.iconName}
			/>
			<div class="grid">
				<div
					class="invisible absolute place-self-center w-1.5 h-1.5 translate-y-3.5 rounded-[1px] lg:w-3 lg:h-3 lg:rounded-sm origin-center rotate-45 lg:translate-y-5 bg-violet-100 shadow-violet-100 opacity-0 shadow-2xl -z-10 group-hover:visible group-hover:opacity-100 transition-all duration-500 ease-in-out">
				</div>
				<div
					class="invisible absolute place-self-center transition-all text-black bg-violet-100 p-[4px] translate-y-[1.3rem] rounded-[3px] whitespace-nowrap shadow-2xl text-xs/[8px] font-medium max-w-fit lg:p-1.5 lg:translate-y-[2.1rem] lg:text-xs lg:rounded-md lg:font-bold group-hover:visible opacity-0 group-hover:opacity-100 duration-500 ease-in-out">
					{iconParameters.iconTooltipText}
				</div>
			</div>
		</div>
	</a>
</div>
