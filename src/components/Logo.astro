---
import { Icon } from "astro-icon";
const { ariaLabel = "", iconTitle = "", iconSrc = "" } = Astro.props;
---

<a href="#" aria-label={ariaLabel} target="_self" title={iconTitle}>
	<div
		class="group flex place-content-center p-1.5  transition-all duration-200 ease-in-out bg-violet-100 bg-opacity-0 box-content border rounded-lg border-transparent hover:bg-opacity-20 hover:border-violet-100">
		<Icon class="w-8 md:w-14 xl:w-20 text-violet-100" name={iconSrc} />
	</div>
</a>
