---
import { Icon } from "astro-icon";
const { ariaLabel = "", iconTitle = "", iconSrc = "" } = Astro.props;
---

<a href="#" aria-label={ariaLabel} target="_self" title={iconTitle}>
	<div
		class="group flex place-content-center w-16 xl:w-24 p-1.5 m-1 transition-all duration-200 ease-in-out bg-violet-100 bg-opacity-0  border rounded-lg border-transparent hover:bg-opacity-20 hover:border-violet-100">
		<Icon class="w-16 xl:w-24 text-violet-100" name={iconSrc} />
	</div>
</a>
