---
import { Icon } from "astro-icon";
const { iconParameters } = Astro.props;
---

<div class="max-w-fit absolute place-self-center">
	<a
		href={iconParameters.iconUrl}
		rel="noopener"
		aria-label={iconParameters.ariaLabel}
		target="_blank"
		title={iconParameters.iconTitle}>
		<div
			class="group w-16 h-14 p-2.5 m-1 transition-all duration-200 ease-in-out bg-violet-100 bg-opacity-20 border rounded-xl border-transparent hover:border-violet-100">
			<Icon class="text-orange-500" name={iconParameters.iconName} />
			<div class="grid">
				<div
					class="invisible absolute place-self-center w-3 h-3 origin-center rotate-45 translate-y-6 rounded-sm bg-violet-100 shadow-violet-100 opacity-0 shadow-2xl -z-10 group-hover:visible group-hover:opacity-100 transition-all duration-700 ease-in-out">
				</div>
				<div
					class="invisible absolute place-self-center transition-all text-black bg-violet-100 p-1.5 translate-y-[2.3rem] max-w-fit whitespace-nowrap rounded-md shadow-2xl text-xs font-bold group-hover:visible opacity-0 group-hover:opacity-100 duration-500 ease-in-out">
					{iconParameters.iconTooltipText}
				</div>
			</div>
		</div>
	</a>
</div>
